{% if creator.get_profile_picture() %}
    ../assets/profile_pic/{{ creator.get_profile_picture() }}
{% elseif creator.get_gender() == 1 %}
    ../assets/profile_pic/placeholders/profile-male.svg
{% elseif creator.get_gender() == 2 %}
    ../assets/profile_pic/placeholders/profile-female.svg
{% else %}
    ../assets/profile_pic/placeholders/profile-unknown.svg
{% endif %}
